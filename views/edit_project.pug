extends layout

block content
  .container.mt-5.background-custom
    h1.mb-4  Edit Project
    form(action=`/edit/project/${project._id}` method="POST")
      .mb-3
        label.form-label Title:
        input.form-control(type="text" name="title" value=project.title)
      .mb-3
        label.form-label Description:
        textarea.form-control(name="description")= project.description
      .mb-3
        label.form-label Technology:
        input.form-control(type="text" name="technology" value=project.technology)
      button.btn.btn-primary(type="submit") Update
