doctype html
html
  head
    title Admin Panel
    link(rel="stylesheet", href="/styles.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
  body.bg-success.bg-gradient
    .container.mt-5
      h1.mb-4.title  Parjad Portfolio Admin Panel
      h2.mb-4.p-3.text.m-3 This is project section
        .row.mb-3.justify-content-center
          a.btn.btn-primary.btn-sm.p-2.button(href="/admin/project") Add
          each project in projects
              .col-md-4.mb-3.p-2.background
                .card.text-light 
                  .card-body.innerbackground
                    h3.font.card-title= project.title
                    p.font.card-text= project.description
                    p.font.card-text= project.technology
                    a.btn.btn-danger.btn.sm.ms-2(href=`/delete/project/${project._id}`) Delete
                    a.btn.btn-warning.btn-sm.ms-2(href=`/edit/project/${project._id}`) Edit Project
      h2.mb-4.p-3.text.m-3 This is skill section 
        .row.mb-3.justify-content-center
          a.btn.btn-primary.p-2.button(href=`/admin/skill`) Add
          each skill in skills
            .col-md-4.mb-3.p-2.background
              .card.text-light
                .card-body.innerbackground
                  h5.font.card-title= skill.name
                  p.font.card-text Level: #{skill.level}
                  p.font.card-text Tech: #{skill.technology}
                  a.btn.btn-danger.btn-sm.ms-2(href=`/delete/skill/${skill._id}`) Delete
                  a.btn.btn-warning.btn-sm.ms-2(href=`/edit/skill/${skill._id}`) Edit

